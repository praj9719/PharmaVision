<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">
    <SurfaceView
        android:layout_alignParentTop="true"
        android:id="@+id/activity_main_surface_view"
        android:layout_width="match_parent"
        android:layout_height="350dp" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="340dp"
        app:cardCornerRadius="10dp"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginVertical="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/activity_main_text_view_result"
                        android:layout_marginHorizontal="5dp"
                        android:gravity="center"
                        android:text="Result"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent" />
                    <Button
                        android:layout_marginHorizontal="10dp"
                        android:id="@+id/activity_main_click"
                        android:layout_width="60dp"
                        android:background="@drawable/icon_click"
                        android:layout_height="60dp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/activity_main_text_view_name"
                    android:text=" "
                    android:textColor="@color/colorBlack"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginVertical="5dp"
                    android:text="  Generic Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/activity_main_text_view_gen_name"
                    android:layout_marginVertical="5dp"
                    android:text=" "
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginVertical="5dp"
                    android:text="  Use"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/activity_main_text_view_use"
                    android:layout_marginVertical="5dp"
                    android:text=" "
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginVertical="5dp"
                    android:text="  Side effects"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/activity_main_text_view_side_effects"
                    android:layout_marginVertical="5dp"
                    android:text=" "
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginVertical="5dp"
                    android:text="  Price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/activity_main_text_view_price"
                    android:layout_marginVertical="5dp"
                    android:text=" "
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</RelativeLayout>